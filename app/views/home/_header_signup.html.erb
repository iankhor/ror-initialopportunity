<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :validate => true ) do |f| %>
  <%= devise_error_messages! %>

    <%= f.input :first_name, autofocus: true, validate: true, label: false, placeholder: 'First name'%>
    <%= f.input :last_name, autofocus: true, validate: true, label: false, placeholder: 'Last name' %>
    <%= f.input :phone_number, autofocus: true, validate: true, label: false, placeholder: 'Phone number' %>
    
    <%= f.email_field :email, autofocus: true, validate: true, label: false, placeholder: 'Email address' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", label: false, placeholder: 'Password'%>

    <%= f.password_field :password_confirmation, autocomplete: "off" , label: false, placeholder: 'Confirm password'%>

  <div class="actions">
    <%= f.submit "Create account" %>
  </div>
<% end %>